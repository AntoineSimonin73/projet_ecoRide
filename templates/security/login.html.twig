{% block title %}Connexion - EcoRide{% endblock %}

{% block body %}
    <div style="max-width: 400px; margin: 60px auto; padding: 30px; background-color: #f0f9f0; border-radius: 10px; box-shadow: 0 0 10px #ccc;">
        <h2 style="text-align: center; color: #2e7d32;">Connexion Ã  EcoRide</h2>

        {% if error %}
            <div style="color: red; margin-bottom: 10px;">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post">
            <div style="margin-bottom: 15px;">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" required autofocus class="form-control" style="width: 100%; padding: 8px;">
            </div>

            <div style="margin-bottom: 15px;">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" required class="form-control" style="width: 100%; padding: 8px;">
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-success" type="submit" style="width: 100%;">Se connecter</button>
        </form>
    </div>
{% endblock %}