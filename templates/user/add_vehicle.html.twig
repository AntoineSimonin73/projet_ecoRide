{% extends 'base.html.twig' %}

{% block title %}Ajouter un véhicule{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="text-center mb-4" style="color: #155724;">Ajouter un véhicule</h1>

    <div class="card p-4 shadow-sm border-0" style="background-color: #f8f9fa;">
        <form method="post" action="{{ path('app_user_add_vehicle') }}">
            <div class="mb-3">
                <label for="plate" class="form-label" style="color: #155724;">Plaque d'immatriculation</label>
                <input type="text" name="plate" id="plate" class="form-control" placeholder="Ex : AB-123-CD" required>
            </div>
            <div class="mb-3">
                <label for="registration_date" class="form-label" style="color: #155724;">Date de première immatriculation</label>
                <input type="date" name="registration_date" id="registration_date" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="brand" class="form-label" style="color: #155724;">Marque</label>
                <input type="text" name="brand" id="brand" class="form-control" placeholder="Ex : Renault" required>
            </div>
            <div class="mb-3">
                <label for="model" class="form-label" style="color: #155724;">Modèle</label>
                <input type="text" name="model" id="model" class="form-control" placeholder="Ex : Clio" required>
            </div>
            <div class="mb-3">
                <label for="color" class="form-label" style="color: #155724;">Couleur</label>
                <input type="text" name="color" id="color" class="form-control" placeholder="Ex : Rouge" required>
            </div>
            <div class="mb-3">
                <label for="seats" class="form-label" style="color: #155724;">Nombre de places disponibles</label>
                <input type="number" name="seats" id="seats" class="form-control" min="1" max="8" required>
            </div>
            <div class="mb-3">
                <label for="preferences" class="form-label" style="color: #155724;">Préférences</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="preferences[]" value="fumeur" id="fumeur">
                    <label class="form-check-label" for="fumeur">Fumeur</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="preferences[]" value="non_fumeur" id="non_fumeur">
                    <label class="form-check-label" for="non_fumeur">Non-fumeur</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="preferences[]" value="animal" id="animal">
                    <label class="form-check-label" for="animal">Animal accepté</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="preferences[]" value="pas_animal" id="pas_animal">
                    <label class="form-check-label" for="pas_animal">Pas d'animal</label>
                </div>
                <textarea name="custom_preferences" class="form-control mt-2" rows="3" placeholder="Ajoutez vos propres préférences"></textarea>
            </div>
            <button type="submit" class="btn btn-success w-100">Ajouter le véhicule</button>
        </form>
    </div>
</div>
{% endblock %}