{% extends 'base.html.twig' %}

{% block title %}Connexion - EcoRide{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card p-4 shadow-sm border-0" style="background-color: #f8f9fa;"> <!-- Fond gris clair -->
                    <h2 class="h5 mb-4 text-center" style="color: #155724;">Connexion Ã  EcoRide</h2>

                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form method="post">
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label" style="color: #155724;">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" required autofocus class="form-control" placeholder="Entrez votre email">
                        </div>

                        <div class="mb-3">
                            <label for="inputPassword" class="form-label" style="color: #155724;">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" required class="form-control" placeholder="Entrez votre mot de passe">
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button class="btn btn-success w-100" type="submit">Se connecter</button> <!-- Bouton vert -->
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}