{% extends 'base.html.twig' %}

{% block title %}Avis reçus{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="text-center mb-4" style="color: #155724;">Vos avis reçus</h1>

    {% if avisRecus|length > 0 %}
        <ul class="list-group">
            {% for avis in avisRecus %}
                <li class="list-group-item">
                    <strong>Auteur :</strong> {{ avis.auteur.pseudo }}<br>
                    <strong>Note :</strong> {{ avis.note }}/5<br>
                    <strong>Commentaire :</strong> {{ avis.commentaires }}<br>
                    <strong>Date :</strong> {{ avis.date|date('d/m/Y') }}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="text-muted">Vous n'avez pas encore reçu d'avis.</p>
    {% endif %}
</div>
{% endblock %}